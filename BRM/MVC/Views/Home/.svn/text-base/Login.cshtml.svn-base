@model BRM.Models.LoginModel

@{
    Layout = null;
}

@{
    ViewBag.Title = "Login";
}
<title>BRM Tool</title>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="~/CSS/materialize.css" rel="stylesheet" />
<script src="~/Scripts/materialize.js"></script>
<script>
    $(document).ready(function () {
        $('.modal').modal();
    });
</script>
<script src="~/Scripts/Validations/LoginValidations.js"></script>
<script src="~/Scripts/Validations/UserDetailsValidation.js"></script>

<body bgcolor="#212121">
    <nav class="grey darken-4">
        <div class="nav-wrapper">
            <a class="brand-logo center">BRM Tool</a>
        </div>
    </nav>

    <div class="row" style="margin-top:10%">
        <div style="background-color:#fafafa; width:600px;margin:0 auto;">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <h4 class="center-align " style="padding:10px"> Log In</h4>
                @Html.AntiForgeryToken()
                <div class="row container">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(a => a.Username, new { @class = "validate" })
                        @Html.LabelFor(a => a.Username)
                        @Html.ValidationMessageFor(a => a.Username)
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">vpn_key</i>
                        @Html.PasswordFor(a => a.Password)
                        @Html.LabelFor(a => a.Password, new { @class = "validate" })
                        @Html.ValidationMessageFor(a => a.Password)
                    </div>
                </div>
                <div class="center-align">
                    <input type="checkbox" id="indeterminate-checkbox" />
                    <label for="indeterminate-checkbox">Remember Me</label>
                </div>
                <br />
                    <div class="center-align">
                        <button id="BtnLogin" type="submit" value="Login" onclick="return Uservalid()" class="waves-effect grey darken-4 white-text waves-light btn-flat">Login</button>
                    </div>
                    <br />
                    <div class="center">
                        <a href="#ForgotPassword">Forgot Password?</a>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="#SignUp">Sign Up</a>
                    </div>
            }
        </div>
    </div>

    <div id="SignUp" class="modal" style="height:600px; margin-top:5%">
        @using (Html.BeginForm("Create", "Home", FormMethod.Post))
        {
            <div class="modal-content">
                <h4 class="center-align">Sign Up!</h4>
                @Html.AntiForgeryToken()
                <div class="row container">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(a => a.FirstName, new { @class = "validate" })
                        @Html.LabelFor(a => a.FirstName)
                        @Html.ValidationMessageFor(a => a.FirstName)
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(a => a.LastName, new { @class = "validate" })
                        @Html.LabelFor(a => a.LastName)
                        @Html.ValidationMessageFor(a => a.LastName)
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">email</i>
                        @Html.TextBoxFor(a => a.Email, new { @class = "validate" })
                        @Html.LabelFor(a => a.Email)
                        @Html.ValidationMessageFor(a => a.Email)
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_box</i>
                        @Html.TextBoxFor(a => a.Username, new { @class = "validate" })
                        @Html.LabelFor(a => a.Username)
                        @Html.ValidationMessageFor(a => a.Username)
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">vpn_key</i>
                        @Html.PasswordFor(a => a.Password)
                        @Html.LabelFor(a => a.Password, new { @class = "validate" })
                        @Html.ValidationMessageFor(a => a.Password)
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">vpn_key</i>
                        <input id="txtPasswordConfirm" type="password" class="validate" />
                        <label for="txtPasswordConfirm">Confirm Password</label>
                    </div>
                </div>
            </div>

            <div class="center-align">
                <button id="BtnAddUser" type="submit" value="Create" onclick="return UserDetailsvalid()" class="waves-effect grey darken-4 white-text waves-light btn-flat">Save</button>
            </div>
        }
    </div>

    <div id="ForgotPassword" class="modal" style="height:600px; margin-top:5%">
        @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
        {
            <div class="modal-content">
                <h4 class="center-align">Forgot Password?</h4>
                @Html.AntiForgeryToken()
                <div class="row container">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(a => a.Username, new { @class = "validate" })
                        @Html.LabelFor(a => a.Username)
                        @Html.ValidationMessageFor(a => a.Username)
                    </div>
                </div>

                <div class="center-align">
                    <button id="BtnAddUser" type="submit" name="Username" class="waves-effect grey darken-4 white-text waves-light btn-flat">Send Mail</button>
                </div>
            </div>
        }
    </div>
</body>